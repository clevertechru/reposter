= bootstrap_form_for(@platform, html: {class: 'form-horizontal'}) do |f|

  = f.text_field :title, class: 'form-control'
  = f.text_field :description, class: 'form-control'
  = f.collection_select :category_id, PlatformCategory.all, :id, :title, {}, class: 'form-control'
  = f.select :type_id, platform_types_list, {}, class: 'form-control'
  = f.text_field :token, class: 'form-control'
  = f.text_field :service_id, class: 'form-control'
  = f.text_field :state, class: 'form-control'
  %br
  = f.actions
  %br
